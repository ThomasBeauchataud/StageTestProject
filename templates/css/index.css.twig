body {
    background-image: url("https://www.acclimation.com/au/wp-content/uploads/2015/09/Modern-Background-02.jpg");
    background-repeat: no-repeat;
    background-size: 100% 100%;
    background-attachment: fixed;
    font-weight: bold;
}

.checkbox-lg .custom-control-label::before,
.checkbox-lg .custom-control-label::after {
    top: .8rem;
    width: 1.55rem;
    height: 1.55rem;
}

.checkbox-lg .custom-control-label {
    padding-top: 13px;
    padding-left: 6px;
}


.checkbox-xl .custom-control-label::before,
.checkbox-xl .custom-control-label::after {
    top: 1.2rem;
    width: 1.85rem;
    height: 1.85rem;
}

.checkbox-xl .custom-control-label {
    padding-top: 23px;
    padding-left: 10px;
}

.custom-block {
    display: inline-block;
    border-style: solid;
    border-width: 2px;
    border-color: black;
    background-color: #ddd;
    padding: 10px 10px 10px 10px;
    border-radius: 5px;
    margin-top: 20px;
    color: black;
    width: 19%;
}

.custom-input {
    width: 70px;
    border-radius: 3px;
    padding: 2px 2px 2px 2px;
    background-color: dodgerblue;
    color: white;
}

.bold20 {
    font-weight: bold;
    font-size: 20px;
}

.custom-multiple {
    background-color: white;
    font-size: 22px;
}

.custom-form {
    margin-left: 600px;
    margin-right: 500px;
    width: 30%;
    color: black;
    background-color: #ddd;
    padding: 20px 70px;
    border-radius: 15px;
}